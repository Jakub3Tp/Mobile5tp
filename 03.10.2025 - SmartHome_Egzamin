#Main_Activity

package com.example.smarthome;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

import java.io.StringReader;
import java.security.KeyStore;

public class MainActivity extends AppCompatActivity {
    public boolean stanActive = false;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });

        TextView numberOfW = findViewById(R.id.numberWhirlpool);
        TextView stanWloncznik = findViewById(R.id.stanWlancznik);

        Button agreed = findViewById(R.id.agreed);
        Button wlancznik = findViewById(R.id.wlancznik);

        EditText number = findViewById(R.id.editNumber);

        int numberW = Integer.parseInt(number.getText().toString());

        agreed.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if (numberW > 1 && numberW <= 12) {
                    numberOfW.setText("Numer prania: " + numberW);
                }
            }
        });

        wlancznik.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(!stanActive){
                    stanActive = true;
                    stanWloncznik.setText("Odkurzacz wyłączony");
                    wlancznik.setText("Włącz");
                }else {
                    stanActive = false;
                    stanWloncznik.setText("Odkurzacz włączony");
                    wlancznik.setText("Wyłącz");
                }
            }
        });
    }
}

</LinearLayout>
